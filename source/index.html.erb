<section class="cf pv5 dark-gray ba b--black-10 bg-near-white">
	<div class="mw9 center ph3 ph4-m ph5-l">
		<h3 class="mid-gray section-header f2 lh-title">Featured Post</h3>

		<div class="cf">
		  <% blog.articles[0...1].each do |article| %>
				<article class="fl w-100 w-50-l bg-white pa4 ba b--black-10 br2">
					<header>
						<h5 class="f4 mt0 lh-title">
							<%= link_to article.title, article, class: "blue no-underline" %>
							<span class="gray f6 db"><%= article.date.strftime('%b %e') %></span>
						</h5>
					</header>

					<div class="mm-blog-copy">
						<%= article.summary %>
					</div>
					<a href="<%= article.url %>" class="blue no-underline grow dib">Read more</a>
				</article>
		  <% end %>
		</div>
	</div>
</section>

